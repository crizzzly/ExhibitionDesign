#:import win kivy.core.window

<Rings>:
    # ####################
    # # https://blog.kivy.org/2014/01/positionsize-of-widgets-in-kivy/
    # #########################
    radius: root.radius
    height: root.height
    canvas:
        Color:
            rgb: 0.502, 0.2588, 0.9569
        Line:
            width: 5
            circle: self.pos[0], self.pos[1], self.radius
            # rectangle: self.pos[0], self.pos[1], self.height, self.height
        Color:
            rgb: 0.2588, 0.3725, 0.9569
        Line:
            width: 5
            circle: self.pos[0], self.pos[1], self.radius + 10
        Color:
            rgb: 0.2392, 1., 1.
        Line:
            width: 5
            circle: self.pos[0], self.pos[1], self.radius + 20

# circle: (self.pos[0]+ self.radius), (self.pos[1]+ self.radius), self.radius
# circle: (self.pos[0]+ self.radius), (self.pos[1]+ self.radius), self.radius

<KivyCamera>:
    coords_left: root.coords_left
    coords_bottom: root.coords_bottom
    widths: root.widths
    circle_r: root.circle_r
    active_function: root.active_function

