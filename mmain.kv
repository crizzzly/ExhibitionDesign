#:import win kivy.core.window.Window
#:import clock kivy.clock.Clock


<Circles>:
    id: circles
    radius: 150
    size: 300, 300
    color: root.color
    on_size: self.canvas.ask_update()
    make_bigger: root.make_bigger
    # target: root.target
    canvas:
        Color:
            rgb: self.color
            # 0.502, 0.2588, 0.9569
        Ellipse:
            pos:  self.pos[0] - self.radius, self.pos[1]-self.radius  #
            size:  self.radius*2, self.radius*2

<Menu>:
    Circles:
        id: top_left
        pos: 0, 0
        color: 0.502, 0.2588, 0.9569
        on_press: self.color = [0.402, 0.1588, 0.8569]
        on_release:
            self.color=[0.502, 0.2588, 0.9569]
            if self.make_bigger: pass
            else: app.manager.current = "camScreen"
            self.toggle_button_behavior()
    Circles:
        id: top_left
        pos: 0, win.height
        color: 0.502, 0.2588, 0.9569
        on_press: self.color = [0.402, 0.1588, 0.8569]; print("clicked camScreen")
        on_release:
            self.color=[0.502, 0.2588, 0.9569]
            if self.make_bigger: pass
            else: app.manager.current = 'preprocScreen'
            self.toggle_button_behavior()
    Circles:
        id: top_right
        color: 0.2588, 0.3725, 0.9569
        pos:  win.width, win.height
        on_press: self.color = [0.1588, 0.2725, 0.8569]
        on_release:
            self.color=[ 0.2588, 0.3725, 0.9569]
            if self.make_bigger: pass
            else: app.manager.current = 'edgeScreen'
            self.toggle_button_behavior()
            print("changing to preprocScreen")
    Circles:
        id: bottom_right
        color: 0.2392, 1., 1.
        pos: win.width, 0
        on_press: self.color=[0.1392, .9, .9]
        on_release:
            self.color=[0.2392, 1., 1.]
            if self.make_bigger: pass
            else: app.manager.current = 'hogScreen'
            print("changing to edgeScreen")

<CamScreen>:
    # name: 'camScreen
    cam: cam
    CameraScreen:
        id: cam
    Menu:
        id: menu
<PreprocScreen>:
    preproc: preproc
    # name: 'preprocScreen'
    Preproc_Anim:
        id: preproc
    Menu
<EdgedetScreen>:
    edgedet: edgedet
    # name: 'edgedetScreen'
    EdgeDetect:
        id: edgedet
    Menu
<HogScreen>:
    hog: hog
    Hog_Detect:
        id: hog
    Menu
